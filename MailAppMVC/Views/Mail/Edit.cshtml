@model MailAppMVC.Models.Mail

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    Edycja wiadomości e-mail
                </div>
                <div class="card-body">
                    <form asp-controller="Mail" asp-action="edit">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label class="control-label">Imię</label>
                            <div>
                                <input class="form-control" type="text" asp-for="FirstName" placeholder="Imię" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Nazwisko</label>
                            <div>
                                <input class="form-control" type="text" asp-for="LastName" placeholder="Nazwisko" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">E-mail</label>
                            <div>
                                <input class="form-control" type="text" asp-for="Email" placeholder="E-mail" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Temat</label>
                            <div>
                                <input class="form-control" type="text" asp-for="Subject" placeholder="Temat" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Wiadomość</label>
                            <div>
                                <input class="form-control" type="text" asp-for="Message" placeholder="Wiadomość" />
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <hr />
                            <input type="submit" class="btn btn-primary" name="save" value="Zapisz" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

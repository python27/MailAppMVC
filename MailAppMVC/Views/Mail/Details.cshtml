@model MailAppMVC.Models.Mail

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    Szczegóły
                </div>
                <div class="card-body">
                    @{
                        if (Model != null)
                        {
                            <div class="row">
                                <div class="form-inline">
                                    <label>Imię: </label>
                                    <h5>@Model.FirstName</h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-inline">
                                    <label>Nazwisko: </label>
                                    <h5>@Model.LastName</h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-inline">
                                    <label>E-mail: </label>
                                    <h5>@Model.Email</h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-inline">
                                    <label>Temat: </label>
                                    <h5>@Model.Subject</h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-inline">
                                    <label>Wiadomość: </label>
                                    <h5>@Model.Message</h5>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@model MailAppMVC.Models.Mail

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    Usuń adresata
                </div>
                <div class="card-body">
                    <form asp-controller="Mail" asp-action="Delete">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <h2>Usuń</h2>
                            <p class="text-danger">@ViewData["ErrorMessage"]</p>
                            <h3>Czy napewno chcesz usunąć wiadomość?</h3>
                        </div>

                        <div class="form-group">
                            <hr />
                            <input type="submit" class="btn btn-primary" name="delete" value="Usuń" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
